      <div class="row">
      <section class="col-xl-9">
      <h2>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <form>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :nombres %><br />
              <%= f.text_field :nombres, autofocus: true, pattern: "^([a-zA-Z0-9)$", required: "required", placeholder: "Ingresa tus nombres", class: "form-control" %>
            </div>

            <div class="form-group col-md-6">
              <%= f.label :apellidos %><br />
              <%= f.text_field :apellidos, autofocus: true, pattern: "^([a-zA-Z0-9)$", required: "required", placeholder: "Ingresa tus apellidos", class: "form-control"%>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@mail.com", class: "form-control" %>
            </div>

            <div class="form-group col-md-6">
              <%= f.label :Fecha_de_Nacimiento %><br />
              <%= f.text_field :fecha_nac, autofocus: true, value: "2000-01-01", type: "date", class: "form-control"%>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group col-md-6">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label :cedula %><br />
              <%= f.text_field :cedula, autofocus: true, required: "required", placeholder: "Ingresa tu cedula", class: "form-control" %>
            </div>

            <div class="form-group col-md-6">
              <%= f.label :domicilio %><br />
              <%= f.text_field :domicilio, autofocus: true, required: "required", placeholder: "Ingresa tu direccion domiciliaria", class: "form-control"%>
            </div>

          </div>

          <div class="form-row align-items-center">
            <div class="col-auto my-1">
              <%= f.label :curso %>
            </div>
            <div class="col-auto my-1">
              <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Preferencia</label>
              <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                <option selected>Elige...</option>
                <option value="1">Ser Bachiller</option>
                <option value="2">Pre-Politécnico</option>
              </select>
            </div>

            <div class="actions">
              <%= f.submit "Registrar" %>
            </div>
          </div>
        </form>
        </section>
        <div id="infoPagForm" class="text-center col-xl-3">
          <!--img id="logoins" class="img-responsive img-rounded" src="../images/logo.png" alt="logoins"-->
          <%= link_to image_tag("logo.png", id: "logoins", class: "img-responsive img-rounded", alt: "logoins") %>
          <div class="col-xl-12">Academia Politécnica de Nivelación</div>
          <div class="col-xl-12">Dirección: Alborada, 7ma etapa</div>
          <div class="col-xl-12">Teléfono: (04) 5127128</div>
        </div>
        <% end %>

